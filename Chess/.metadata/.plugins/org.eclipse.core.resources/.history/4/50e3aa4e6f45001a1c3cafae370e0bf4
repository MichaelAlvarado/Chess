import java.util.ArrayList;

import ChessPieces.Bishop;
import ChessPieces.King;
import ChessPieces.Knight;
import ChessPieces.Pawn;
import ChessPieces.Piece;
import ChessPieces.Queen;
import ChessPieces.Rook;

public class ChessBoard {

	ArrayList<Piece> Whites; //white pieces
	ArrayList<Piece> Blacks; //black pieces 

	public ChessBoard() {
		//Pawns
		for(int x = 1; x <= 8; x++){
			Whites.add(new Pawn(x, 2));//add all white pawns in row 2 column from 1 to 8
			Blacks.add(new Pawn(x, 7));//add all black pawns in row 7 column from 1 to 8
		}
		//Rooks
		Whites.add(new Rook(1,1));
		Whites.add(new Rook(8,1));
		Blacks.add(new Rook(1,8));
		Blacks.add(new Rook(8,8));
		//Knights
		Whites.add(new Knight(2,1));
		Whites.add(new Knight(7,1));
		Blacks.add(new Knight(2,8));
		Blacks.add(new Knight(7,8));
		//Bishops
		Whites.add(new Bishop(3,1));
		Whites.add(new Bishop(6,1));
		Blacks.add(new Bishop(3,8));
		Blacks.add(new Bishop(6,8));
		//Queens
		Whites.add(new Queen(4,1));
		Blacks.add(new Queen(4,8));
		//Kings
		Whites.add(new King(5,1));
		Blacks.add(new King(5,8));
	}
}
